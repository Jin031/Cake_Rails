<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4>ジャンル一覧・追加</h4>
   <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
   <table>
    <thead>
     <tr>
      <th></th>
      <th></th>
     </tr>
    </thead>
    
     <tbody>
      <tr>
       <th>ジャンル名 <%= f.text_field :name %></th>
       <th><%= f.submit '新規登録',class:"btn btn-success" %></th>
      </tr>
     </tbody>
   </table>
     <% end %>
   <div class="col-md-6">  
    <table class="table table-hover table-inverse">
     <thead>
      <tr></tr>
      <tr></tr>
     </thead>
     <tbody>
      <tr>
       <th>ジャンル</th>
      </tr>
       <% @genres.each do |genre| %>
      <tr>
       <td><%= genre.name %></td>
       <td><%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-sm btn-success" %></td>
     </tr>
       <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
</div>