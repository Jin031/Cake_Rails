<div class="container">
  <div class="row">
   <div class="col-md-12">
    <h4 class= "mt-3 mb-5">
      <%= @customer.first_name %>
      <%= @customer.last_name %>
      さんの会員詳細
    </h4>

    <div class="row">
     <div class="col-md-2 mb-2">
      会員ID
     </div>
     <div class="col-md-5">
      <%= @customer.id %>
     </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     氏名
    </div>
    <div class="col-md-3 my-1">
     <%= @customer.first_name %>
     <%= @customer.last_name %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     フリガナ
    </div>
    <div class="col-md-3 my-1">
     <%= @customer.first_name_kana %>
     <%= @customer.last_name_kana %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     郵便番号
    </div>
    <div class="col-md-3 my-1">
     <%= @customer.postal_code %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     住所
    </div>
    <div class="col-md-3 my-1">
     <%= @customer.address %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     電話番号
    </div>
    <div class="col-md-3 my-1">
     <%= @customer.telephone_number %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     メールアドレス
    </div>
    <div class="col-md-3 my-1">
     <%= @customer.email %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
    会員ステータス
    </div>
    <div class="col-md-3 my-1 row">
      <% if @customer.is_deleted == true %>
          有効
      <% elsif @customer.is_deleted == false %>
         退会
     <% end %>
    </div>
   </div>
   <div class="col-md-9 offset-md-1 row">
    <div>
     <%= link_to "編集する", edit_admin_customer_path(@customer.id),class:"btn btn-sm btn-success" %>
    </div>
    <div class="offset-md-1">
     <%= link_to "注文履歴一覧を見る", admin_root_path,class:"btn btn-primary" %>
    </div>
   </div>
  </div>
</div>
</div>