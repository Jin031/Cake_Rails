<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4><%= @customer.first_name %>
        <%= @customer.last_name %>
        さんの会員情報編集
    </h4>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

   <p>会員ID  <%= @customer.id %></p>
   <div class="row">
    <div class="col-md-2">
     氏名
    </div>
    <div class="col-md-3">
     <%= f.label :first_name, '(姓)' %>
     <%= f.text_field :first_name %>
    </div>
    <div class="col-md-3">
     <%= f.label :last_name, '(名)' %>
     <%= f.text_field :last_name %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2">
     フリガナ
    </div>
    <div class="col-md-3">
     <%= f.label :first_name_kana, '(セイ)' %>
     <%= f.text_field :first_name_kana %>
    </div>
    <div class="col-md-3">
     <%= f.label :last_name_kana, '(メイ)' %>
     <%= f.text_field :last_name_kana %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
     メールアドレス
    </div>
    <div class="col-md-3">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
     郵便番号
    </div>
    <div class="col-md-3">
     <%= f.text_field :postal_code %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
     住所
    </div>
    <div class="col-md-3">
     <%= f.text_field :address %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
     電話番号
    </div>
    <div class="col-md-3">
     <%= f.text_field :telephone_number %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
    販売ステータス
    </div>
    <div class="col-md-3">
      有効<%= f.radio_button :is_deleted, true %>
      退会<%= f.radio_button :is_deleted, false %>
   </div>
    </div>
   <div class="actions">
    <%= f.submit "変更を保存",class:"btn btn-success" %>
   </div>
  <% end %>

  </div>
 </div>
</div>

