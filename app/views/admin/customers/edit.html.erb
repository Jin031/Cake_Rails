<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4 class= "mt-3 mb-4">
    <%= @customer.first_name %>
    <%= @customer.last_name %>
     さんの会員情報編集
   </h4>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

   <div class="row">
    <div class="col-md-2 mb-2">
     会員ID
    </div>
    <div class="col-md-5">
     <%= @customer.id %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     氏名
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :first_name %>
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :last_name %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2 my-1">
     フリガナ
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :first_name_kana %>
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :last_name_kana %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     郵便番号
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :postal_code %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
     住所
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :address %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     電話番号
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :telephone_number %>
    </div>
   </div>
    <div class="row">
    <div class="col-md-3 my-1">
     メールアドレス
    </div>
    <div class="col-md-3 my-1">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
    会員ステータス
    </div>

    <div class="col-md-3 my-1 row">
     <h5><%= f.radio_button :is_deleted, true %>有効</h5>
     <h5 class= "ml-3"><%= f.radio_button :is_deleted, false %>退会</h5>
    </div>
   </div>
   <div class="offset-md-3">
    <%= f.submit "変更を保存",class:"btn btn-success" %>
   </div>
  <% end %>
  </div>
 </div>
</div>

