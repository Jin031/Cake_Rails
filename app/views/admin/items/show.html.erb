 <h4 class= "mt-3 mb-5">商品詳細</h4>
 <div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= image_tag @item.get_image(300, 300) %>
   </div>

   <div class="col-md-9">
    <div class="row">
     <div class="col-md-3 mb-2">
      商品名
     </div>
     <div class="col-md-5">
      <%= @item.name %>
     </div>
    </div>
    <div class="row">
     <div class="col-md-3 mb-2">
      商品説明
     </div>
     <div class="col-md-5">
      <%= @item.introduction %>
     </div>
    </div>
    <div class="row">
     <div class="col-md-3 mb-2">
      ジャンル
     </div>
     <div class="col-md-5">
      <%= @item.genre.name %>
     </div>
    </div>
    <div class="row">
     <div class="col-md-3 mb-2">
      税込価格</br>
      (税抜価格)
     </div>
     <div class="col-md-5">
       <%= @item.with_tax_price %>円(<%= @item.price %>円)
     </div>
    </div>
    <div class="row">
     <div class="col-md-3 mb-2">
      販売ステータス
     </div>
     <div class="col-md-5">
       <% if @item.is_active == true %>
          販売中
       <% elsif @item.is_active == false %>
          販売停止中
       <% end %>
     </div>
    </div>
    <div class="offset-md-3">
    <%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-sm btn-success" %>
    </div>
   </div>
  </div>
 </div>