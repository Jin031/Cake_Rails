<div class="container">
 <div class="row">
  <div class="col-md-12">
  <h4>商品一覧</h4>

  <div class="col-md-8 offset-md-1">
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜き価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
      </tr>
     </thead>
     <tbody>
      <% @items.each do |item| %>
       <tr>
        <td><%= item.id %></td>
        <td>
        <%= link_to admin_item_path(item.id) do %>
        <%= item.name %>
         <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
        <% if item.is_active == true %>
          販売中
        <% elsif item.is_active == false %>
          販売停止中
        <% end %>
        </td>
       </tr>
      <% end %>
     </tbody>
    </table>
     <%= paginate @items %>
   </div>
  </div>
 </div>