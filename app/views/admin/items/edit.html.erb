<div class="container">
 <div class="row">
  <div class="mx-auto">
   <h4 class= "mt-3 mb-5">商品編集</h4>
    <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>

    <div class='form-group row'>
     <%= f.label :image, "商品画像", class: "col-4" %>
     <%= f.file_field :image, accept: "image/*", class: "col-8" %>
    </div>

    <div class='form-group row'>
     <%= f.label :name, "商品名", class: "col-4" %>
     <%= f.text_field :name, class: "col-8" %>
    </div>

    <div class='form-group row'>
     <%= f.label :introduction, "説明", class: "col-4" %>
     <%= f.text_area :introduction, class: "col-8" %>
    </div>

    <div class='form-group row'>
     <%= f.label :genre_id, "ジャンル", class: "col-4" %>
     <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: "選択してください" }, class: "col-8" %>
    </div>

    <div class='form-group row'>
     <%= f.label :price, "税抜き価格", class: "col-4" %>
     <%= f.text_field :price, class: "col-7" %>円
    </div>

    <div class='form-group row'>
     <%= f.label :is_active, "販売ステータス", class: "col-4" %>
     <h5><%= f.radio_button :is_active, true %>販売中</h5>
     <h5 class= "ml-3"><%= f.radio_button :is_active, false %> 販売停止</h5>
    </div>

    <div class="text-center"><%= f.submit '変更を保存',class:"btn btn-success" %></div>
      <% end %>
    </div>
  </div>
</div>