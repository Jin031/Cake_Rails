<h4>商品新規登録</h4>
<div class="container">
 <div class="row">
  <div class="col-md-12">
  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>説明</h4>
      <%= f.text_area :introduction %>
    <h4>ジャンル</h4>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: "選択してください" } %>
    <h4>税抜き価格</h4>
    <%= f.text_field :price %>円
    <h4>販売ステータス</h4>
      販売中<%= f.radio_button :is_active, true %>
      販売停止<%= f.radio_button :is_active, false %>
    <%= f.submit '新規投稿',class:"btn btn-success" %>
  <% end %>
  </div>
 </div>
</div>