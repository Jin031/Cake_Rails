<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4 class= "mt-3 mb-5">新規会員登録</h4>

   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
   <div class="row">
    <div class="col-md-2">
     名前
    </div>
    <div class="col-md-3">
     <%= f.label :first_name, '(姓)' %>
     <%= f.text_field :first_name %>
    </div>
    <div class="col-md-3">
     <%= f.label :last_name, '(名)' %>
     <%= f.text_field :last_name %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2">
     フリガナ
    </div>
    <div class="col-md-3">
     <%= f.label :first_name_kana, '(セイ)' %>
     <%= f.text_field :first_name_kana %>
    </div>
    <div class="col-md-3">
     <%= f.label :last_name_kana, '(メイ)' %>
     <%= f.text_field :last_name_kana %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     メールアドレス
    </div>
    <div class="col-md-3 my-1">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     郵便番号(ハイフンなし)
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :postal_code %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     住所
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :address %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     電話番号(ハイフンなし)
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :telephone_number %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     パスワード
    </div>
    <div class="col-md-3 my-1">
    <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     パスワード(確認用)
    </div>
    <div class="col-md-3 my-1">
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
   </div>

    <div class="row">
     <div class="col-md-3 my-1"></div>
     <div class="col-md-3 my-1">
        <%= f.submit "新規登録",class:"btn btn-success" %>
     </div>
    </div>

     <% end %>
    <h5>既に登録済みの方</h5>
    <%= render "public/shared/links" %>
    からログインしてください
  </div>
 </div>
</div>

