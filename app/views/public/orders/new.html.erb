<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4 class= "my-3">注文情報入力</h4>

  <%= form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
<h5>支払い方法</h5>
 <div class="col-2">
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
 </div>
 <div class="col-2">
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
 </div>

 <h5>お届け先</h5>
  <p class="col-2"><%= f.radio_button :select_address, 0 %> ご自身の住所</br>
   〒<%= current_customer.postal_code %>
     <%= current_customer.address %></br>
     <%= current_customer.first_name %>
     <%= current_customer.last_name %>
  </p>

   <p class="col-2"><%= f.radio_button :select_address, 1 %> 登録済住所から選択</p>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>

   <p class="col-2"><%= f.radio_button :select_address, 2 %> 新しいお届け先</p>
    <div class="row">
     <div class="col-md-3">
      郵便番号(ハイフンなし)
     </div>
     <div class="col-md-3">
      <%= f.text_field :postal_code %>
    </div>
   </div>
    <div class="row">
     <div class="col-md-3">
      住所
     </div>
     <div class="col-md-3 my-1">
      <%= f.text_field :address %>
     </div>
    </div>
    <div class="row">
     <div class="col-md-3">
      宛名
     </div>
     <div class="col-md-3">
      <%= f.text_field :name %>
     </div>
    </div>
    <div class="text-center">
     <%= f.submit '確認画面へ進む',class:"btn btn-primary" %>
    </div>
  <% end %>
  </div>
 </div>
</div>