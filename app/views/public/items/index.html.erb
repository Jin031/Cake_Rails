<div class="container">
 <div class="row">
  <div class="px-10 mx-auto">
   <h4>商品一覧(全<%= @items.count %>件)</h4>
    <div class="w-100 d-flex flex-wrap">
       <% @items.each do |item| %>
     <div class="w-20">
      <div class="card-body">
       <%= link_to item_path(item.id) do %>
       <%= image_tag item.get_image(100, 100) %>
       <% end %>
      </div>
       <p class="card-title">
        <%= link_to item_path(item.id) do %>
        <%= item.name %>
        <% end %>
       </p>
       <p class="card-text">
        ￥ <%= item.with_tax_price %>
     </div>
        <% end %>
       </p>
   </div>
  </div>
 </div>
</div>
 <%= paginate @items %>