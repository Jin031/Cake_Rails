<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4 class= "mt-3 mb-4">会員情報編集</h4>
    <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>

   <div class="row">
    <div class="col-md-2">
     氏名
    </div>
    <div class="col-md-3">
     <%= f.label :first_name, '(姓)' %>
     <%= f.text_field :first_name %>
    </div>
    <div class="col-md-3">
     <%= f.label :last_name, '(名)' %>
     <%= f.text_field :last_name %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-2">
     フリガナ
    </div>
    <div class="col-md-3">
     <%= f.label :first_name_kana, '(セイ)' %>
     <%= f.text_field :first_name_kana %>
    </div>
    <div class="col-md-3">
     <%= f.label :last_name_kana, '(メイ)' %>
     <%= f.text_field :last_name_kana %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     郵便番号
    </div>
    <div class="col-md-3">
     <%= f.text_field :postal_code %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     住所
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :address %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     電話番号
    </div>
    <div class="col-md-3 my-1">
     <%= f.text_field :telephone_number %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3 my-1">
     メールアドレス
    </div>
    <div class="col-md-3 my-1">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
   </div>
   <div class="col-md-9 offset-md-3 row">
    <div>
    <%= f.submit "編集内容を保存",class:"btn btn-success" %>
    </div>
    <div class="offset-md-2">
    <%= link_to "退会する", withdraw_customers_path,class:"btn btn-danger" %>
    </div>
   </div>
  <% end %>

  </div>
 </div>
</div>
