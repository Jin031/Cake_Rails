<div class="container">
 <div class="row">
  <div class="col-md-5">
  <h4>マイページ</h4>
   <table class="table table-bordered">
    <thead></thead>
     <tbody>
      <p>登録情報 <%= link_to "編集する", edit_customers_path,class:"btn btn-sm btn-success" %></p>
      <tr>
       <th>氏名</th>
       <td>
        <%= @customer.first_name %>
        <%= @customer.last_name %>
       </td>
      </tr>
      <tr>
       <th>
        カナ
       </th>
       <td>
        <%= @customer.first_name_kana %>
        <%= @customer.last_name_kana %>
       </td>
      </tr>
      <tr>
       <th>郵便番号</th>
       <td>
        <%= @customer.postal_code %>
       </td>
      </tr>
      <tr>
       <th>住所</th>
       <td>
        <%= @customer.address %>
       </td>
      </tr>
      <tr>
       <th>電話番号</th>
       <td>
        <%= @customer.telephone_number %>
       </td>
      </tr>
      <tr>
       <th>メールアドレス</th>
       <td>
        <%= @customer.email %>
       </td>
      </tr>
     </tbody>
    </table>
    <p>配送先 <%= link_to "一覧を見る", addresses_path,class:"btn btn-primary" %></p>
   </div>
  </div>
 </div>