<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h4>配送先編集</h4>
    <%= form_with model: @address, url: address_path, method: :patch do |f| %>

   <div class="row">
    <div class="col-md-3">
     郵便番号
    </div>
    <div class="col-md-3">
     <%= f.text_field :postal_code %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
     住所
    </div>
    <div class="col-md-3">
     <%= f.text_field :address %>
    </div>
   </div>
   <div class="row">
    <div class="col-md-3">
     名前
    </div>
    <div class="col-md-3">
     <%= f.text_field :name %>
    </div>
   </div>
    <th><%= f.submit '変更内容を保存',class:"btn btn-success" %></th>
  <% end %>
  </div>
 </div>
</div>
